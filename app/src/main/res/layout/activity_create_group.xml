<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ahmed.social.CreateGroup">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_name"
        android:layout_marginTop="61dp"
        android:width="310dp"

        android:layout_alignParentTop="true"
        android:gravity="center"
        android:hint="Group Name"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_type"
        android:width="310dp"
        android:layout_below="@+id/group_name"
        android:gravity="center"
        android:hint="Group Type"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_description"
        android:layout_below="@+id/group_type"
        android:layout_alignEnd="@+id/group_type"
        android:layout_alignStart="@+id/group_type"
        android:gravity="center"
        android:hint="Group Description" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/button"
        android:layout_marginTop="72dp"
        android:onClick="oncreategroup"
        android:capitalize="none"
        android:layout_below="@+id/group_description"
        android:layout_alignLeft="@+id/group_description"
        android:layout_alignStart="@+id/group_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Group"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#100606"
        android:textSize="14dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_group_image"
        android:layout_toLeftOf="@+id/group_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button"
        android:layout_alignTop="@+id/group_name"
        android:background="@mipmap/profile_photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Icon"
        android:id="@+id/textView6"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/create_group_image"
        android:layout_alignEnd="@+id/create_group_image" />


</RelativeLayout>
