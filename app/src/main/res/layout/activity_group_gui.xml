<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ahmed.social.Group_gui">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="212dp"
            android:layout_height="146dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Settings"
                android:id="@+id/textView5"
                android:layout_above="@+id/linearLayout"
                android:layout_alignTop="@+id/linearLayout"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_width="189dp"
                android:layout_height="match_parent"
                android:id="@+id/group_image"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/profile_photo" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="221dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_name"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView4"
                android:layout_marginTop="28dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Name"
                android:id="@+id/textView2"
                android:layout_alignBottom="@+id/group_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:width="110dp"
                android:gravity="left|center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_type"
                android:layout_below="@+id/group_name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/group_name"
                android:layout_alignStart="@+id/group_name"
                android:gravity="center"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Group Type"
                android:id="@+id/textView3"
                android:layout_alignBottom="@+id/group_type"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/group_type"
                android:layout_toStartOf="@+id/group_type"
                android:gravity="left|center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:layout_below="@+id/textView3"
                android:layout_alignRight="@+id/group_type"
                android:layout_alignEnd="@+id/group_type"
                android:layout_alignLeft="@+id/group_type"
                android:layout_alignStart="@+id/group_type"
                android:gravity="center"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Description"
                android:id="@+id/textView4"
                android:layout_alignBottom="@+id/description"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
